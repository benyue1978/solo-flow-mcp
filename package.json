{
  "name": "solo-flow-mcp",
  "version": "1.0.0",
  "description": "MCP Server with stdio support for local integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test-stdio": "node test-stdio.js",
    "test-inspector": "node test-inspector.js",
    "test-absolute-paths": "node test-absolute-paths.js",
    "test-readme": "node test-readme.js",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:security": "jest tests/security"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "stdio"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.0"
  }
}
