{
  "name": "solo-flow-mcp",
  "version": "1.0.0",
  "description": "MCP Server with Streamable HTTP and stdio support",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js --http",
    "http": "node dist/server.js --http",
    "test-sse": "node test-http.js",
    "test-stdio": "node test-stdio.js",
    "test-inspector": "node test-inspector.js",
    "test-absolute-paths": "node test-absolute-paths.js",
    "test-readme": "node test-readme.js",
    "inspector": "npx @modelcontextprotocol/inspector node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "streamable-http",
    "stdio"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
