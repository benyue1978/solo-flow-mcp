{
  "name": "@benyue1978/soloflow-mcp",
  "version": "1.0.0",
  "description": "MCP server for SoloFlow project documentation management",
  "main": "dist/index.js",
  "bin": {
    "soloflow-mcp": "dist/index.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "cursor",
    "documentation",
    "project-management",
    "model-context-protocol",
    "stdio"
  ],
  "author": "SongYue <yuesong@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benyue1978/solo-flow-mcp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && npm run copy-resources",
    "copy-resources": "cp -r src/resources dist/",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test-stdio": "node test-stdio.js",
    "test-inspector": "node test-inspector.js",
    "test-absolute-paths": "node test-absolute-paths.js",
    "test-readme": "node test-readme.js",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:security": "jest tests/security",
    "prepublishOnly": "npm run build && npm test",
    "postpublish": "echo 'Package published successfully!'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.0"
  }
}
